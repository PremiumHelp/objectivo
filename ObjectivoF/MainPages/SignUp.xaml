<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ObjectivoF.SignUp">
      <StackLayout VerticalOptions="Center" Orientation="Vertical" Padding="30" Spacing="20" Margin="10"    >
        
            <Label Text="Name" TextColor="Gray" FontAttributes="Bold" FontFamily="Avenir"  />
            <Entry x:Name="NameEntry" Placeholder="name" TextColor="Gray" FontFamily="Avenir" Text="{Binding name}" />

            <Label  TextColor="Gray" FontFamily="Avenir" FontAttributes="Bold"/>
            <Entry x:Name="PasswordEntry" Placeholder="password" FontFamily="Avenir" IsPassword="true" Text="{Binding password}" />

            <Label Text="Email address" TextColor="Gray" FontFamily="Avenir" FontAttributes="Bold" />
              <Entry x:Name="EmailEntry" Placeholder="email address" Text="{Binding email}" />
    
        <Button Text="Sign Up"  TextColor="Purple" FontAttributes="Bold" FontFamily="Avenir" Clicked="SigningUp" />
            <Label  />
        </StackLayout>
   
</ContentPage>



  
    
        
  
